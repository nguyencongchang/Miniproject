<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="18dp"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/textTittleRoom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:fontFamily="@font/pro_text"
    android:textSize="20sp"
    android:gravity="center"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="15dp"
    android:textColor="@color/neutracolor">
</TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/neutracolor"
        android:layout_alignParentRight="true"
        android:layout_above="@id/cardView2"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="16dp"
        android:id="@+id/numberPeople">
    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_below="@id/textTittleRoom"
        android:layout_marginRight="14dp"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="14dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/image_toc_do"
        android:id="@+id/imageRoom">
    </ImageView>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/progressbar"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/cardView2"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>