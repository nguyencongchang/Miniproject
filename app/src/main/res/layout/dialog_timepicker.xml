<?xml version="1.0" encoding="utf-8"?>
     <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_dialog">

        <TextView
        android:id="@+id/tvChoseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/pro_text"
        android:text="Chọn thời gian"
        android:textColor="#44494D"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvFrom"
        app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="3dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="14dp"
        android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/tvFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="33dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/pro_text_regular"
            android:text="Từ"
            android:textColor="#44494D"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.412"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edFrom"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:backgroundTint="#EEEEEE"
            android:background="@drawable/shape_btn_email_pass"
            android:id="@+id/edFrom"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="-- : --"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="77dp"
            android:layout_marginRight="67dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/textColorBlack"/>
        <TextView
            android:id="@+id/tvTo"
            android:fontFamily="@font/pro_text_regular"
            android:textSize="16sp"
            android:textColor="#44494D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đến"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="22sp"
            android:layout_marginTop="127dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/edTo"
            />
        <TextView
            android:backgroundTint="#EEEEEE"
            android:background="@drawable/shape_btn_email_pass"
            android:id="@+id/edTo"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="-- : --"
            android:layout_marginTop="121dp"
            android:layout_marginLeft="77dp"
            android:layout_marginRight="67dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/textColorBlack"/>

        <Button
            android:fontFamily="@font/pro_text_semibold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="37dp"
            android:layout_marginBottom="21dp"
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/shape_btnbookroom"
            android:text="Đồng ý"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edTo"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>