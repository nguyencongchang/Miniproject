<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginRight="13dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:scaleY="-1"
            android:rotation="-90"
            android:id="@+id/itemInfoProgess"
            android:indeterminateOnly="false"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:progress="25"
            android:background="@drawable/circle_shape_progressbar"
            android:progressDrawable="@drawable/shape_progessbar" />

        <TextView
            android:id="@+id/tvTimeSlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/neutracolor"
            android:fontFamily="@font/pro_text_regular"
            android:textSize="14sp"
            android:text="1" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>